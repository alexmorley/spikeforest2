{
    "analysis_name": "hybrid_drift",
    "output":"key://pairio/spikeforest/spikeforest_analysis_results.hybrid_drift.json",
    "recordings":["key://pairio/spikeforest/spikeforest_recording_group.hybrid_drift.json"],
    "sorter_keys": ["ks2", "irc", "ks", "ms4", "yass", "sc", "hs2", "tdc", "jrc"],
    "sorter_keys_disable": ["klusta"],
    "download_from": ["spikeforest.spikeforest2", "kbucket"],
    "job_timeout":1200,
    "test":false,
    "compute_resources": {
        "default":{"resource_name":"ccmlin000-80", "collection":"spikeforest","share_id":"spikeforest.spikeforest2"},
        "cpu":{"resource_name":"ccmlin000-80", "collection":"spikeforest","share_id":"spikeforest.spikeforest2"},
        "gpu":{"resource_name":"ccmlin000-gpu", "collection":"spikeforest","share_id":"spikeforest.spikeforest2"}
    },
    "sorters":{
        "ms4": {
            "name": "MountainSort4-thr3",
            "processor_name": "MountainSort4",
            "params": {
                "detect_sign": -1,
                "adjacency_radius": 50,
                "detect_threshold": 3
            },
            "compute_resource":"cpu"
        },
        "irc": {
            "name":"IronClust",
            "processor_name":"IronClust",
            "params": {
                "detect_sign": -1,
                "adjacency_radius": 75,
                "prm_template_name": "",
                "detect_threshold": 4.5
            },
            "compute_resource": "cpu"
        },
        "irc-d2": {
            "name":"IronClust-drift2",
            "processor_name":"IronClust",
            "params": {
                "detect_sign": -1,
                "adjacency_radius": 75,
                "prm_template_name": "drift2_template.prm",
                "detect_threshold": 4.5
            },
            "compute_resource": "cpu"
        },
        "sc": {
            "name": "SpykingCircus",
            "processor_name": "SpykingCircus",
            "params": {
                "detect_sign": -1,
                "adjacency_radius": 50
            },
            "compute_resource": "cpu"
        },
        "ks": {
            "name": "KiloSort",
            "processor_name": "KiloSort",
            "params": {
                "detect_sign": -1,
                "adjacency_radius": 50
            },
            "compute_resource": "gpu"
        },
        "ks2": {
            "name": "KiloSort2",
            "processor_name": "KiloSort2",
            "params": {
                "detect_sign": -1,
                "adjacency_radius": 50
            },
            "compute_resource": "gpu"
        },
        "yass": {
            "name": "Yass",
            "processor_name": "Yass",
            "params": {
                "detect_sign": -1,
                "adjacency_radius": 50
            },
            "compute_resource": "cpu"
        },
        "jrc": {
            "name": "JRClust",
            "processor_name": "JRClust",
            "params": {},
            "compute_resource": "gpu"
        },        
        "hs2": {
            "name": "HerdingSpikes2",
            "processor_name": "HerdingSpikes2",
            "params": {},
            "compute_resource": "cpu"
        },
        "klusta": {
            "name": "Klusta",
            "processor_name": "Klusta",
            "params": {},
            "compute_resource": "cpu"
        },        
        "tdc": {
            "name": "Tridesclous",
            "processor_name": "Tridesclous",
            "params": {},
            "compute_resource": "cpu"
        }       
    }
}