#!/usr/bin/env python

import os
import sys
import argparse
import time
import mtlogging
from mountainclient import _kb_ls_helper

# @mtlogging.log(root=True)
def main():
    parser = argparse.ArgumentParser(description = 'Write the contents of a local or remote file to stdout')
    parser.add_argument('path',help='KBucket or local path of file')

    args = parser.parse_args()
    _kb_ls_helper(path=args.path, _cat=True)

if __name__== "__main__":
    main()
  
