#!/usr/bin/env python

import os
import sys
import argparse
import time
import mtlogging
from mountaintools import client as mt

# @mtlogging.log(root=True)
def main():
    parser = argparse.ArgumentParser(description = 'Write the contents of a local or remote file to stdout')
    parser.add_argument('path',help='KBucket or local path of file')

    args = parser.parse_args()
    path2 = mt.realizeFile(path=args.path)

    if not path2:
        print('Unable to realize file.', file=sys.stderr)
        exit(-1)

    with open(path2,'rb') as f:
        while True:
            data = os.read(f.fileno(), 4096)
            if len(data) == 0:
                break
            os.write(sys.stdout.fileno(), data)

if __name__== "__main__":
    main()
  
